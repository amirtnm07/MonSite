min-height: 1300px;
display: flex; 
flex-wrap: wrap;
gap: 20px;
}
img {
  border: 10px solid transparent;
  border-radius: 10px;

}

/* Pour les smartphones */
@media (max-width: 768px) {
    img {
        max-width: 100%; /* Image prend la largeur totale sur mobile */
    }

.box {
  background-color: rgba(255, 255, 255, 0.1);
  padding: 1px;
  border-radius: 10px;
  transition: all 0.5s ease;
  text-align: center;
}

.box:hover {
  background-color: rgb(62, 62, 62);
  color: white;
  cursor: pointer;
  transform: scale(1.03);
  box-shadow: 0 0 15px gold;
}

.container {
  display: flex;
  justify-content: center; 
  gap: 40px;                
  margin-top: 50px;
}

.column {
  display: flex;
  flex-direction: column;
  gap: 30px;              
}


}


</style>


